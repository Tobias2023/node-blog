{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "strictNullChecks": true
        // "watch": true
    },
    "include": [
        "core-ts/**/*",
        "core-ts/*"
    ],
    "exclude": [
        "node_modules"
    ]
}